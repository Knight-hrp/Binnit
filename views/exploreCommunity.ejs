    <div id="display-container" class="display-container">
        <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <div class="search-results-header">
                <h2>Search Results for: "<%= searchQuery %>"</h2>
                <a href="/community/explore" class="clear-search-btn">Clear Search</a>
            </div>
        <% } %>
        
        <% if (typeof searchResults !== 'undefined' && searchResults) { %>
            <ul class="community-list">
                <% searchResults.forEach((Com) => { %>
                    <li class="community-item">
                        <img src="<%= Com.imageName %>" alt="Community" class="community-image">
                        <span class="community-name"><%= Com.communityName %></span>
                        <button class="visit-btn" onclick="window.location.href = '/community/<%= encodeURIComponent(Com.communityName) %>'">Visit</button>
                    </li>
                <% }); %>
            </ul>
        <% } else if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <div class="no-results">
                <p>No communities found matching "<%= searchQuery %>"</p>
            </div>
        <% } else if (joinedCommunities && allCommunities) { %>
            <ul class="community-list">
            <% joinedCommunities.forEach((community) => { %>
                <% allCommunities.forEach((Com) => { %>
                    <% if (community.communityID.toString() === Com._id.toString()) { %>
                        <li class="community-item">
                            <img src="<%= Com.imageName %>" alt="Community" class="community-image">
                            <span class="community-name"><%= Com.communityName %></span>
                            <button class="visit-btn" onclick="window.location.href = '/community/<%= encodeURIComponent(Com.communityName) %>'">Visit</button>
                        </li>
                    <% } %>
                <% }); %>
            <% }); %>
            </ul>
        <% } else { %>
            <div class="empty-communities">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="12"></line>
                    <line x1="12" y1="16" x2="12.01" y2="16"></line>
                </svg>
                <p>No communities joined yet</p>
            </div>
        <% } %>
