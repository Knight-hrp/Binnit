                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('createPostForm');
        const imageInput = document.getElementById('imageInput');
        const fileInfo = document.getElementById('fileInfo');
        const captionInput = document.getElementById('captionInput');
        const submitButton = document.getElementById('submitButton');
        const errorMessage = document.getElementById('errorMessage');
        
        const MAX_FILE_SIZE = 50 * 1024 * 1024; // 50MB in bytes

        // Show selected file name and validate size
        imageInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // Check file size
                if (file.size > MAX_FILE_SIZE) {
                    errorMessage.classList.add('show');
                    fileInfo.style.display = 'none';
                    submitButton.disabled = true;
                    // Clear the file input
                    imageInput.value = '';
                    return;
                }

                // File size is okay
                errorMessage.classList.remove('show');
                fileInfo.textContent = `Selected file: ${file.name} (${formatFileSize(file.size)})`;
                fileInfo.style.display = 'block';
            } else {
                fileInfo.style.display = 'none';
                errorMessage.classList.remove('show');
            }
            validateForm();
        });

        // Format file size to human-readable format
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Simple form validation
        function validateForm() {
            const caption = captionInput.value.trim();
            const file = imageInput.files[0];
            const isValidFileSize = file ? file.size <= MAX_FILE_SIZE : false;
            submitButton.disabled = !caption || !file || !isValidFileSize;
        }

        captionInput.addEventListener('input', validateForm);

        // Add loading state to submit button when form is submitted
        form.addEventListener('submit', function(e) {
            const file = imageInput.files[0];
            if (file && file.size > MAX_FILE_SIZE) {
                e.preventDefault();
                errorMessage.classList.add('show');
                return;
            }
            submitButton.classList.add('loading');
            submitButton.disabled = true;
        });
    }); 
    </script>

