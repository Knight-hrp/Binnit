    <style>
        :root {
            --deep-purple: #4a148c;
            --royal-purple: #7b1fa2;
        }

        .button-group {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-top: 20px;
            justify-content: flex-end;
        }

        .button {
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
            min-width: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .button svg {
            width: 20px;
            height: 20px;
            transition: transform 0.3s ease;
        }

        .button-secondary {
            background-color: transparent;
            color: #e3e3e3;
            border: 1px solid #2d2d2e;
        }

        .button-secondary:hover {
            background-color: rgba(45, 45, 46, 0.5);
            border-color: #363637;
        }

        .button-primary {
            background: linear-gradient(45deg, var(--deep-purple), var(--royal-purple));
            color: white;
            box-shadow: 0 4px 12px rgba(123, 31, 162, 0.2);
        }

        .button-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(123, 31, 162, 0.3);
        }

        .button-primary:hover svg {
            transform: translateX(4px);
        }

        .button-primary:active {
            transform: translateY(1px);
        }

        .button-primary:disabled {
            background: linear-gradient(45deg, #6b6b6b, #4a4a4a);
            cursor: not-allowed;
            transform: none;
            opacity: 0.7;
        }

        .button-primary:disabled svg {
            transform: none;
        }

        .error-message {
            color: #ff4444;
            background-color: rgba(255, 68, 68, 0.1);
            border: 1px solid #ff4444;
            padding: 12px;
            border-radius: 8px;
            margin: 10px 0;
            display: none;
        }

        .error-message.show {
            display: block;
        }
    </style>

