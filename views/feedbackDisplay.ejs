        <style>
            .feedback-container {
                max-width: 800px;
                margin: 20px auto;
                padding: 20px;
                animation: fadeIn 0.5s ease-in-out;
            }

            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(20px); }
                to { opacity: 1; transform: translateY(0); }
            }

            .feedback-card {
                background: #1a1a1b;
                border-radius: 12px;
                padding: 25px;
                margin-bottom: 25px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                transition: all 0.3s ease;
                border: 1px solid #2d2d2e;
            }

            .feedback-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
                border-color: #363637;
            }

            .feedback-header {
                display: flex;
                align-items: center;
                margin-bottom: 20px;
                padding-bottom: 15px;
                border-bottom: 1px solid #2d2d2e;
            }

            .user-avatar {
                width: 48px;
                height: 48px;
                border-radius: 50%;
                margin-right: 15px;
                object-fit: cover;
                border: 2px solid #2d2d2e;
                transition: transform 0.3s ease;
            }

            .user-avatar:hover {
                transform: scale(1.1);
            }

            .user-info {
                flex-grow: 1;
            }

            .user-name {
                font-weight: 600;
                color: #e3e3e3;
                margin: 0;
                font-size: 1.1em;
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .user-name::after {
                content: "â€¢";
                color: #818384;
                font-size: 0.8em;
            }

            .feedback-date {
                color: #818384;
                font-size: 0.9em;
                margin: 5px 0 0 0;
            }

            .feedback-subject {
                font-size: 1.4em;
                color: #d7dadc;
                margin: 0 0 15px 0;
                font-weight: 600;
                line-height: 1.3;
            }

            .feedback-content {
                color: #d7dadc;
                line-height: 1.7;
                font-size: 1.05em;
                padding: 5px 0;
            }

            .feedback-content p {
                margin: 0 0 15px 0;
            }

            .feedback-content p:last-child {
                margin-bottom: 0;
            }

            .no-feedback {
                text-align: center;
                color: #818384;
                padding: 60px 40px;
                background: #1a1a1b;
                border-radius: 12px;
                margin: 40px auto;
                max-width: 600px;
                border: 1px solid #2d2d2e;
                animation: fadeIn 0.5s ease-in-out;
            }

            .no-feedback h2 {
                color: #e3e3e3;
                font-size: 1.8em;
                margin-bottom: 15px;
            }

            .no-feedback p {
                font-size: 1.1em;
                opacity: 0.8;
            }

            .feedback-title {
                color: #e3e3e3;
                margin-bottom: 30px;
                font-size: 28px;
                padding-left: 20px;
                font-weight: 600;
                position: relative;
            }

            .feedback-title::before {
                content: "";
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 4px;
                height: 24px;
                background: #0079d3;
                border-radius: 2px;
            }

            .feedback-meta {
                display: flex;
                align-items: center;
                gap: 15px;
                margin-top: 15px;
                padding-top: 15px;
                border-top: 1px solid #2d2d2e;
            }

            .feedback-tag {
                background: #272729;
                color: #818384;
                padding: 4px 12px;
                border-radius: 12px;
                font-size: 0.9em;
                transition: all 0.2s ease;
            }

            .feedback-tag:hover {
                background: #363637;
                color: #e3e3e3;
            }

            @media (max-width: 768px) {
                .feedback-container {
                    padding: 15px;
                }

                .feedback-card {
                    padding: 20px;
                }

                .feedback-title {
                    font-size: 24px;
                }

                .user-avatar {
                    width: 40px;
                    height: 40px;
                }

                .feedback-subject {
                    font-size: 1.2em;
                }
            }
        </style>

        <div class="feedback-container">
            <h1 class="feedback-title">User Feedback</h1>
            
            <% if (feedbacks && feedbacks.length > 0) { %>
                <% feedbacks.forEach(feedback => { %>
                    <div class="feedback-card">
                        <div class="feedback-header">
                            <% 
                            let userProfile = userProfiles.find(profile => 
                                profile.user_id.toString() === feedback.user_id._id.toString()
                            );
                            let profileImage = userProfile ? userProfile.picture_name : '/default-avatar.png';
                            %>
                            <img src="<%= profileImage %>" alt="User Avatar" class="user-avatar">
                            <div class="user-info">
                                <p class="user-name">
                                    <%= feedback.user_id.name %>
                                    <% if (feedback.user_id.role === 'Developer') { %>
                                        <span class="feedback-tag">Developer</span>
                                    <% } %>
                                </p>
                                <p class="feedback-date"><%= new Date(feedback.createdAt).toLocaleDateString('en-US', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %></p>
                            </div>
                        </div>
                        <h2 class="feedback-subject"><%= feedback.title %></h2>
                        <div class="feedback-content"><%- feedback.description %></div>
                        <div class="feedback-meta">
                            <span class="feedback-tag">Feedback</span>
                            <% if (feedback.category) { %>
                                <span class="feedback-tag"><%= feedback.category %></span>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-feedback">
                    <h2>No feedback submitted yet</h2>
                    <p>Be the first to provide feedback!</p>
                </div>
            <% } %>
        </div>
    </div>

