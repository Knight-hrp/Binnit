            cancelButton.innerText = 'Cancel';
            
            cancelButton.addEventListener('click', function() {
                usernameForm.style.display = 'none';
                editProfileNameBtn.style.display = 'flex';
                this.remove();
            });
            
            usernameForm.appendChild(cancelButton);
        });
    }

    
